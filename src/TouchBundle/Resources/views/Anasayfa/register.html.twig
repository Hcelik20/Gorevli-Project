<div class="container">
    <div class="fs-form-wrap"  id="fs-form-wrap">
        <div class="fs-title">
            <h1>Kayıt Formu</h1>
            <div class="codrops-top">
                <a class="codrops-icon codrops-icon-prev" href="{{ path('anasayfa') }}"><span>Anasayfa</span></a>
